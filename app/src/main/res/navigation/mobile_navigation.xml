<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_stock_list">

    <fragment
        android:id="@+id/navigation_stock_list"
        android:name="de.andreaseckner.android.homestock.ui.StockListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_stock_list" >
        <action
            android:id="@+id/action_navigation_stock_list_to_navigation_add_item"
            app:destination="@id/navigation_add_item" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_item"
        android:name="de.andreaseckner.android.homestock.ui.AddItemFragment"
        android:label="@string/title_add_item"
        tools:layout="@layout/fragment_add_item" >
        <action
            android:id="@+id/action_navigation_add_item_to_navigation_barcode_scanner"
            app:destination="@id/navigation_barcode_scanner" />
    </fragment>

    <fragment
        android:id="@+id/navigation_barcode_scanner"
        android:name="de.andreaseckner.android.homestock.ui.BarcodeFragment"
        android:label="@string/title_barcode"
        tools:layout="@layout/fragment_barcode" >
        <action
            android:id="@+id/action_navigation_barcode_scanner_to_navigation_add_item"
            app:destination="@id/navigation_add_item" />
    </fragment>
</navigation>